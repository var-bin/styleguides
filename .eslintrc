{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 6,
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "global-require": "warn",
    "quotes": [
      "error",
      "double"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-underscore-dangle": "off",
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error",
          "info"
        ]
      }
    ]
  }
}
